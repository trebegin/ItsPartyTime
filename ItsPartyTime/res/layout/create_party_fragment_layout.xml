<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_page_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <Button 
        style="@style/ButtonTheme"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="@string/done_creating_party_button_text"
        android:id="@+id/done_creating_party_button"/>

    <EditText
        android:id="@+id/partyNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/party_name_hint"
        android:imeOptions="actionDone"
        android:textColor="#287AA9" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/login_button"
        style="@style/ButtonTheme"
        android:layout_alignLeft="@+id/select_playlist_button"
        android:layout_below="@+id/partyNameTxt"
        android:text="@string/login_button_text" />

    <Button
        android:id="@+id/select_playlist_button"
        style="@style/ButtonTheme"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/done_creating_party_button"
        android:layout_below="@+id/login_button"
        android:text="@string/select_playlist_button_text" />

</RelativeLayout>
