<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_fragment_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
    <Button 
        style="@style/ButtonTheme"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="@string/done_creating_party_button_text"
        android:id="@+id/done_creating_party_button"/>
    
    <Button 
        style="@style/ButtonTheme"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@id/done_creating_party_button"
        android:text="@string/select_playlist_button_text"
        android:id="@+id/select_playlist_button"/>
</RelativeLayout>
